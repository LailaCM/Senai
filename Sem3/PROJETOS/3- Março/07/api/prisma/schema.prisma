generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model clientes {
  id          Int    @id @default(autoincrement())
  nome        String
  cpf         String @unique
  cnpj        String @unique
  email       String @unique
  endereco    String 
}

model funcionarios {
  id               Int    @id @default(autoincrement())
  nome             String
  cpf              String @unique
  email            String @unique
  nasc             DateTime @unique
  salario          Int 
  endereco         String 
}

model produtos {
  id           Int    @id @default(autoincrement())
  nome         String
  descricao    String 
  quantidade   Int 
  precocompra  Int
  precovenda   Int 
  fornecedor   String 
}